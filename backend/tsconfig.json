{
  "compilerOptions": {
    "target": "ES2020",              // Use modern JavaScript features
    "module": "CommonJS",            // Node.js requires CommonJS modules
    "rootDir": "./src",              // Source files directory
    "outDir": "./dist",              // Compiled output directory
    "strict": true,                  // Enable all strict type-checking options
    "esModuleInterop": true,         // Allows default imports for CommonJS modules
    "skipLibCheck": true             // Skips type checking of .d.ts files for faster builds
  },
  "include": ["src/**/*"],           // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]        // Exclude node_modules from compilation
}
